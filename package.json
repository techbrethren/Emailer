{
  "name": "emailer",
  "version": "0.1.0",
  "private": true,
  "description": "An electron app to generate pretty emails and send them.",
  "author": {
    "name": "Elder Tessem",
    "email": "benjamin.tessem@missionary.org"
  },
  "build": {
    "appId": "org.techbrethren.emailer",
    "copyright": "Copyright © 2020 Elder Tessem, Tech Brethren",
    "productName": "ELM Emailer",
    "files": [
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }, {
        "target": "portable"
      }
    ],
      "legalTrademarks": "Copyright © 2020 Elder Tessem, Tech Brethren"
    }
  },
  "main": "./public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@fluentui/react": "^7.150.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@rescripts/rescript-env": "^0.0.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@uifabric/azure-themes": "^7.5.41",
    "@uifabric/react-cards": "^0.114.10",
    "add": "^2.0.6",
    "cross-env": "^7.0.2",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5",
    "fontsource-roboto": "^3.0.3",
    "github-url-to-object": "^4.0.4",
    "mime-types": "^2.1.27",
    "nunjucks": "^3.2.2",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-draft-wysiwyg": "^1.14.5",
    "react-scripts": "4.0.0",
    "rescripts": "^0.0.1-security",
    "sanitize-html": "^2.1.2",
    "sanitize-html-react": "^1.13.0",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "react-start": "rescripts start",
    "react-build": "rescripts build",
    "react-test": "rescripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build & electron-builder --publish=always",
    "build": "yarn react-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "yarn start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@types/draftjs-to-html": "^0.8.0",
    "@types/github-url-to-object": "^4.0.0",
    "@types/jest": "^26.0.15",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/nunjucks": "^3.1.3",
    "@types/react": "^16.9.56",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.8",
    "@types/react-draft-wysiwyg": "^1.13.0",
    "@types/sanitize-html": "^1.27.0",
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "raw-loader": "^4.0.2",
    "wait-on": "^5.2.0"
  }
}
